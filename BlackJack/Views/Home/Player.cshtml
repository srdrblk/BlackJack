@model Models.Entities.Player
@using Contract.Enums

<div id="@Model.Id">

    <div class="row ">

        @foreach (var card in Model.PlayerCards)
        {
            <div class="col  btn btn-outline-secondary">
                <div class="card rank-@card.Class"><span class="rank">@card.Title</span><span class="suit">  </span></div>
            </div>
        }

        @if (Model.PlayerStatuEnum == PlayerStatuEnum.InGame && Model.PlayerSecondStatuEnum == PlayerStatuEnum.InGame)
        {
            <div class="col-12">
                <a class="btn btn-primary" onclick="addCard('@Model.Id')">Get Card</a>

                <a class="btn btn-danger" onclick="ClosePlayer('@Model.Id')">Close Deal</a>
            </div>
            <div class="col-12">
                <a class="btn ">@Model.PlayerStatuEnum.ToString() - @Model.Point</a>
            </div>
        }
        else
        {
            <div class="col-12">
                <a class="btn ">@Model.PlayerSecondStatuEnum.ToString() - @Model.Point</a>
            </div>

        }

    </div>
</div>

